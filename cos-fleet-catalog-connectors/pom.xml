<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd"
         xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">

    <parent>
        <groupId>org.bf2</groupId>
        <artifactId>cos-fleet-catalog-camel-parent</artifactId>
        <version>999-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>cos-fleet-catalog-connectors</artifactId>
    <packaging>pom</packaging>

    <properties>
        <quarkus.banner.enabled>false</quarkus.banner.enabled>

        <quarkus.container-image.build>false</quarkus.container-image.build>
        <quarkus.container-image.push>false</quarkus.container-image.push>
        <quarkus.container-image.registry>quay.io</quarkus.container-image.registry>
        <quarkus.container-image.group>rhoas</quarkus.container-image.group>

        <quarkus.jib.base-jvm-image>registry.access.redhat.com/ubi8/openjdk-11@sha256:ebad9aee9dd3059bcd0442b3442f5a91241dfc9c09a28d5478737b92fd39685a</quarkus.jib.base-jvm-image>
        <quarkus.jib.jvm-entrypoint>java,-XX:+UseShenandoahGC,-Djava.util.logging.manager=org.jboss.logmanager.LogManager,-jar,/work/quarkus-run.jar</quarkus.jib.jvm-entrypoint>
    </properties>

    <dependencies>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-container-image-jib</artifactId>
        </dependency>
        <dependency>
            <groupId>io.quarkus</groupId>
            <artifactId>quarkus-logging-json</artifactId>
        </dependency>

        <dependency>
            <groupId>org.apache.camel.k</groupId>
            <artifactId>camel-k-runtime</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-yaml-dsl</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-kamelet</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-kafka</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-microprofile-health</artifactId>
        </dependency>
        <dependency>
            <groupId>org.apache.camel.quarkus</groupId>
            <artifactId>camel-quarkus-controlbus</artifactId>
        </dependency>

        <!-- kamelets -->
        <dependency>
            <groupId>com.github.apache.camel-kamelets</groupId>
            <artifactId>camel-kamelets</artifactId>
            <version>${camel-kamelets-catalog.version}</version>
        </dependency>

        <!--
        <dependency>
            <groupId>com.github.apache.camel-kamelets</groupId>
            <artifactId>camel-kamelets-utils</artifactId>
            <version>${camel-kamelets-catalog.version}</version>
        </dependency>
        -->

        <!--
        <dependency>
            <groupId>org.apache.camel.kamelets</groupId>
            <artifactId>camel-kamelets</artifactId>
            <version>${camel-kamelets-catalog.version}</version>
        </dependency>
        -->

        <!-- local -->
        <dependency>
            <groupId>org.bf2</groupId>
            <artifactId>cos-connector-camel</artifactId>
        </dependency>
        <dependency>
            <groupId>org.bf2</groupId>
            <artifactId>cos-fleet-catalog-kamelets</artifactId>
        </dependency>
        <dependency>
            <groupId>org.bf2</groupId>
            <artifactId>cos-connector-camel-action-jsonpath</artifactId>
        </dependency>
        <dependency>
            <groupId>org.bf2</groupId>
            <artifactId>cos-connector-camel-action-serdes</artifactId>
        </dependency>
        <dependency>
            <groupId>org.bf2</groupId>
            <artifactId>cos-connector-camel-kafka</artifactId>
        </dependency>
    </dependencies>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.bf2</groupId>
                    <artifactId>camel-connector-maven-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>generate</id>
                            <goals>
                                <goal>generate-catalog</goal>
                                <goal>generate-json-schema</goal>
                            </goals>
                        </execution>
                    </executions>
                    <configuration>
                        <connectors>
                            <connector>
                                <!--
                                  configure the default actions.

                                  If connector-specific actions have to be included, use combine.children to
                                  properly configure the merge behavior, i.e.:

                                  <actions combine.children="append">
                                    <action>
                                        <name>my-action</name>
                                        <version>${camel-kamelets-catalog.version}</version>
                                    </action>
                                  </actions>
                                -->
                                <actions>
                                    <action>
                                        <name>throttle-action</name>
                                        <version>${camel-kamelets-catalog.version}</version>
                                    </action>

                                    <action>
                                        <name>cos-log-action</name>
                                        <version>${cos.kamelets.version}</version>
                                    </action>

                                    <action>
                                        <name>cos-jsonpath-extract-action</name>
                                        <version>${cos.kamelets.version}</version>
                                        <metadata>
                                            <supported.content-type>application/x-struct</supported.content-type>
                                        </metadata>
                                    </action>
                                    <action>
                                        <name>cos-jsonpath-remove-action</name>
                                        <version>${cos.kamelets.version}</version>
                                        <metadata>
                                            <supported.content-type>application/x-struct</supported.content-type>
                                        </metadata>
                                    </action>
                                    <action>
                                        <name>cos-jsonpath-rename-action</name>
                                        <version>${cos.kamelets.version}</version>
                                        <metadata>
                                            <supported.content-type>application/x-struct</supported.content-type>
                                        </metadata>
                                    </action>
                                    <action>
                                        <name>cos-jsonpath-set-action</name>
                                        <version>${cos.kamelets.version}</version>
                                        <metadata>
                                            <supported.content-type>application/x-struct</supported.content-type>
                                        </metadata>
                                    </action>
                                </actions>

                                <!--
                                  configure the default channel.

                                  If connector-specific channels have to be included, use combine.children to
                                  properly configure the merge behavior, i.e.:

                                  <channels combine.children="append">
                                    <beta/>
                                  </channels>
                                -->
                                <channels>
                                    <stable/>
                                </channels>

                                <!--
                                  configure the data shape.

                                  If connector-specific data shape have to be included, use combine.children to
                                  properly configure the merge behavior, i.e.:

                                  <dataShape combine.children="append">
                                  </channels>
                                -->

                                <!--
                                <dataShape>
                                    <output>
                                        <formats>
                                            <format>STRING</format>
                                            <format>JSON</format>
                                        </formats>
                                        <defaultFormat>STRING</defaultFormat>
                                    </output>
                                </dataShape>
                                -->

                                <!--
                                  configure error handler.

                                  If connector-specific error handler have to be included, use combine.children to
                                  properly configure the merge behavior, i.e.:

                                  <errorHandler combine.children="append">
                                  </channels>
                                -->
                                <errorHandler>
                                    <strategies>
                                        <stratgey>LOG</stratgey>
                                        <stratgey>STOP</stratgey>
                                        <stratgey>DEAD_LETTER_QUEUE</stratgey>
                                    </strategies>
                                    <defaultStrategy>LOG</defaultStrategy>
                                </errorHandler>
                            </connector>
                        </connectors>
                    </configuration>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <executions>
                        <execution>
                            <id>copy-resources</id>
                            <phase>generate-resources</phase>
                            <goals>
                                <goal>copy-resources</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${cos.connector.catalog.root}/connector-catalog-camel-${cos.connector.catalog.group}</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>${project.basedir}/src/generated/resources/connectors</directory>
                                        <includes>
                                            <include>*.json</include>
                                        </includes>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
            </plugins>
        </pluginManagement>
        <plugins>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>build-helper-maven-plugin</artifactId>
                <executions>
                    <execution>
                        <phase>generate-sources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>add-resource</goal>
                        </goals>
                        <configuration>
                            <sources>
                                <source>src/generated/java</source>
                            </sources>
                            <resources>
                                <resource>
                                    <directory>src/generated/resources</directory>
                                </resource>
                            </resources>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <modules>
        <module>aws</module>
        <module>azure</module>
        <module>gcp</module>
        <module>misc</module>
        <module>nosql</module>
        <module>social</module>
        <module>sql</module>
        <module>storage</module>
    </modules>

    <profiles>
        <profile>
            <id>container-build</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <quarkus.container-image.build>true</quarkus.container-image.build>
            </properties>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.bf2</groupId>
                            <artifactId>camel-connector-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>app</id>
                                    <goals>
                                        <goal>generate-app</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>container-push</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <quarkus.container-image.push>true</quarkus.container-image.push>
            </properties>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.bf2</groupId>
                            <artifactId>camel-connector-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>app</id>
                                    <goals>
                                        <goal>generate-app</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
        <profile>
            <id>fat-jar</id>
            <activation>
                <activeByDefault>false</activeByDefault>
            </activation>
            <properties>
                <quarkus.container-image.build>false</quarkus.container-image.build>
                <quarkus.package.type>uber-jar</quarkus.package.type>
                <quarkus.package.output-name>connector</quarkus.package.output-name>
            </properties>
            <build>
                <pluginManagement>
                    <plugins>
                        <plugin>
                            <groupId>org.bf2</groupId>
                            <artifactId>camel-connector-maven-plugin</artifactId>
                            <executions>
                                <execution>
                                    <id>app</id>
                                    <goals>
                                        <goal>generate-app</goal>
                                    </goals>
                                </execution>
                            </executions>
                        </plugin>
                    </plugins>
                </pluginManagement>
            </build>
        </profile>
    </profiles>
</project>
